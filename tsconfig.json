{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"lib": ["esnext", "dom"],
		"noEmitOnError": false,
		"baseUrl": ".",
		"paths": {
			"@lib/*": ["./lib/*"],
		}
	},
	"include": ["./src/**/*.ts", "./src/**/*.d.ts", "./src/**/*.tsx"],
	"exclude": ["node_modules", "./lib/**/*.ts"]
}
